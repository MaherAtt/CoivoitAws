<!DOCTYPE html>
<html lang="fr">
    <head>
        <%- include('./partials/head'); -%>
    </head>
    <body>
        <%- include('./partials/headerProfil'); -%>
 
        <!-- le profil de l'utilisateur -->
        <div id="voir_profil" class="col-md-12 row">
            <div class="col-6" id="photo_profil2">
                <img src='../Pictures/d' onerror="this.onerror=null; this.src='../img/img-profil.jpg'" alt="photo de profil" title="photo de profil" class="rounded-circle"/>
                <%if (canEdit==true) { %>
                <form action="upload" method="post" enctype="multipart/form-data">

                    <div class="col-md-12">
                        <input type="file" onchange="form.submit()" class="form-control-file" id="exampleFormControlFile1" name="PictureFile" >
                    </div>
                </form>
                <% } %>
            </div>
            <h1 class="col-6 col col-md-12 text-center titre_page">Informations personnelles</h1>
            <div class="d-flex justify-content-center row" >
                <!-- Info perso -->
                <div  class="col-md-6 col-sm-6 card" id="info_perso">
                    <div class= "d-flex justify-content-center row">
                        <div id="photo_profil1" class=" col-md-4 col-sm-12  d-flex justify-content-center row">

                            <img src='../Pictures/jn' onerror="this.onerror=null; this.src='../img/img-profil.jpg'" alt="photo de profil" title="photo de profil" class="rounded-circle"/>
                            <%if (canEdit==true) { %>
                            <form action="upload" method="post" enctype="multipart/form-data">

                                <div class="col-md-12">
                                    <input type="file" onchange="form.submit()" class="form-control-file" id="exampleFormControlFile1" name="PictureFile" >
                                </div>
                            </form>
                            <% } %>

                        </div>
                        <div id="infos" class=" col-md-8 col-sm-12">
                            <div class="list-group">
                                <form>
                                    <div class="form-group row">
                                        <label for="prenom" class="col-sm-3 col-4 col-form-label">Prénom</label>
                                        <div class="col-sm-9 col">
                                            <input type="text"  class="form-control " id="prenom" value="nb" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="nom" class="col-sm-3 col-4 col-form-label">Nom</label>
                                        <div class="col-sm-9 col">
                                            <input type="text"  class="form-control " id="nom" value=",j" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="email" class="col-sm-3 col-4 col-form-label">Email </label>
                                        <div class="col-sm-9 col input-group mb-2">
                                            <input type="email"  class="form-control " id="email" value="in" readonly>
                                        </div>
                                    </div>
                                     <div class="form-group row">
                                        <label for="email" class="col-sm-3 col-4 col-form-label">Adresse </label>
                                        <div class="col-sm-9 col input-group mb-2">
                                            <input type="text"  class="form-control " id="adresse" value="Adresse" >
                                        </div>
                                    </div>
                                    <div class="text-center my-4">
                                        <button class="btn btn-info btn-sm" type="submit">Modifier</button>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Fin Info perso -->
                <!-- Avis -->
                <div class="col-md-4 col-sm-4 card" id="avis" >
                    <div class=" col-md-12 col-sm-12 ">
                        <h1 class="col-sm-12 text-center"> Avis </h1>
                        <div class="col-sm-12 row" id="Ponctualité">
                            <p class="col-sm-5 col-7">Ponctualité </p>
                            <div class="col-sm-7 col">
                                <div class="progress ">
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" ></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 row" id="confiance">
                            <p class="col-sm-5 col-7">Confiance </p>
                            <div class="col-sm-7 col">
                                <div class="progress ">
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 row" id="nb_trajet">
                            <p class="col-sm-12">Nombre de trajets : 50</p>
                        </div>
                        <div class="col-sm-12 row">
                            <canvas id="lineChart"></canvas>
                        </div>
                        <div class="col-sm-12 row">
                            <a href="#" class="stretched-link text-right col-sm-12" id="voir_com">Voir les Avis  </a>
                        </div>

                    </div>
                </div>
                <!-- Fin Avis -->
            </div>

        </div>

        
        <script> 
            $(document).ready(function(){
                /*je colore l'icone profil pour dire que je suis sur cette page*/
                $('#mySidebar .menu a:nth-child(n)').find('i').removeClass('change_page')
                $('#mySidebar .menu a:nth-child(5)').find('i').addClass('change_page')
                $('#mySidebar .menu a:nth-child(n)').removeClass('change_page')
                $('#mySidebar .menu a:nth-child(5)').addClass('change_page')
            })
        </script>
        
        <%- include('./partials/menuProfil'); -%>
        <script src="javascripts/profil.js"></script>
        <%- include('./partials/footerProfil'); -%>



    </body>

</html>

